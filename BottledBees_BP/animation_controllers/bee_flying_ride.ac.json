						},
						{
							"no_movement": "q.movement_direction(0) == 0 && q.movement_direction(2) == 0"
						},
						{
							"backward": "variable.rot >= 112 && variable.rot <= 248"
						},
						{
							"leftward": "variable.rot >= 23 && variable.rot <= 157"
						},
						{
							"rightward": "variable.rot >= 203 && variable.rot <= 337"
						}
