                    "player"
                ],
                "seats": [
                    {
                        "position": [ 0.0, 4.0, 0.0 ]
                    }
                ]
            },
            "minecraft:movement": {
                "value": 0.1
            },
            "minecraft:movement.basic": {},
            "minecraft:input_ground_controlled": {
            },
            "minecraft:can_power_jump": {
            },
            "minecraft:horse.jump_strength": {
              "value": {
                "range_min": 0.4,
                "range_max": 1.0
              }
            },
            "minecraft:physics": {
            },
            "minecraft:health": {
                "value": 10,
                "max": 10
            }
        },

        "events": {
            "max:delay_then_despawn": {
                "add": {
                    "component_groups": [ 
                        "max:delay_before_despawn"
                    ]
                }
            },
            "max:despawn": {
                "add": {
                    "component_groups": [ 
                        "max:remove_self"
                    ]
                }
            }
